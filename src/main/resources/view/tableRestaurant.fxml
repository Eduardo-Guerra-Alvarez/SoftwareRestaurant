<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            stylesheets="@../css/employee.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eduardo.softrestaurant.controllerFX.TableRestaurantControllerFX"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox spacing="10">
            <Label style="-fx-font-size: 20;" text="GesntiÃ³n de Mesas"/>
            <HBox spacing="10">
                <TextField fx:id="capacity" promptText="Capacidad"/>
                <ComboBox fx:id="status" promptText="Estado">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Activo" />
                            <String fx:value="Inactivo" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button onAction="#addTable" styleClass="buttonBlue" text="Agregar"/>
                <Button onAction="#editTable" styleClass="buttonYellow" text="Editar"/>
                <Button onAction="#deleteTable" styleClass="buttonRed" text="Eliminar"/>
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableRestaurantView">
            <columns>
                <TableColumn fx:id="tableIdCol" text="Id"/>
                <TableColumn fx:id="capacityCol" text="Capacidad"/>
                <TableColumn fx:id="statusCol" text="Estatus"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
